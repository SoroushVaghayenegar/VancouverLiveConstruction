<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
        <div>
          <h4>Display Preferences:</h4>
          <ul style="line-height: 1em; list-style-type: none">

            <li  id="row_checkbox">
              <input class = "text_b" type="checkbox" name="rc_checkbox" value="" id="textbox_rc" checked>
              <label for="checkbox" id="label_tb">Road Closures</label>
            </li>

            <li id="row_checkbox">
              <div>
                <input class = "text_b" type="checkbox" name="og_checkbox" value="" id="textbox_og" checked>
                <label for="checkbox">Ongoing Constructions</label>
              </div>
            </li>

            <li  id="row_checkbox">
              <input class = "text_b" type="checkbox" name="fc_checkbox" value="" id="textbox_fc" checked>
              <label for="checkbox">Future Constructions</label>
            </li><br><br>

            <div>
              <button class="save_pref btn btn-primary" id = "<%= current_user.id %>">Save changes</button>
              <script>document.getElementById("textbox_rc").checked = <%= User.find_by(:id => current_user).pref_rc%>;
              document.getElementById("textbox_og").checked = <%= User.find_by(:id => current_user).pref_ip%>;
              document.getElementById("textbox_fc").checked = <%= User.find_by(:id => current_user).pref_up%></script>
            </div>

          </ul>
        </div>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>

      <a href="http://gravatar.com/emails" target=_blank>change</a>
    </div>
  </div>
</div>